enum ContactType {
  SCHOOLEMAIL
  PERSONALEMAIL
  INSTAGRAM
  MESSENGER
  GROUPME
  PHONE
}

type Contact {
  contact_type: ContactType!
  value: String!
}

type User {
  google_id: Int!
  created_at: Int!
  last_modified_at: Int!
  given_name: String!
  family_name: String!
  contacts: [Contact!]
  taking: [Int!]
}

type Meeting {
  dayTimes: String!
  location: String!
}

type Section {
  section_id: Int!
  users_taking: [Int!]
  SectionNumber: String!
  Instructor: String!
  Meetings: [Meeting!]
}

type Class {
  course_id: Int!
  subject: String!
  catalog_number: String!
  title: String!
}

type Query {
  user(google_id: Int!): User!
  section(section_id: Int!): Section!
}

input NewUser {
  google_id: Int!
  given_name: String!
  family_name: String!
}

input ContactInput {
  contact_type: ContactType!
  value: String!
}

type Mutation {
  createUser(new_user: NewUser!): User!
  enrollInSection(user_id: Int!, section_id: Int!): Boolean
  removeFromSection(user_id: Int!, section_id: Int!): Boolean
  registerContactInfo(user_id: Int!, contact: ContactInput!): Boolean
  sendContactMessage(from_user_id: Int!, to_user_id: Int!): Boolean
}